<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TruthOrDrinkApp.LoginPage"
             Title="Login">
    <VerticalStackLayout Padding="20" Spacing="10">
        <Label Text="Truth Or Drink" FontSize="24" HorizontalOptions="Center" />

        <Label Text="Gebruikersnaam:" />
        <Entry x:Name="UsernameEntry" Placeholder="Gebruikersnaam" />

        <Label Text="Wachtwoord:" />
        <Entry x:Name="PasswordEntry" Placeholder="Wachtwoord" IsPassword="True" />

        <Label Text="Wachtwoord vergeten?" TextColor="Blue" HorizontalOptions="End" />

        <HorizontalStackLayout Spacing="10">
            <Button Text="Login" Clicked="OnLoginClicked" />
            <Button Text="Registreren" Clicked="OnRegisterClicked" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>