<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TruthOrDrinkApp.LoginSavePage"
             Title="Inlog Opslaan">
    
    <VerticalStackLayout Padding="20" Spacing="10">
        <Label Text="Truth Or Drink" FontSize="24" HorizontalOptions="Center" />

        <Label Text="Wilt u de inloggegevens bewaren?" />

        <HorizontalStackLayout>
            <CheckBox x:Name="SaveYes" />
            <Label Text="Ja" />

            <CheckBox x:Name="SaveNo" />
            <Label Text="Nee" />
        </HorizontalStackLayout>

        <Button Text="Login" BackgroundColor="LightBlue" TextColor="White" Clicked="OnLoginClicked" />
    </VerticalStackLayout>
</ContentPage>
